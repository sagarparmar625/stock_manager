<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/dark_blue"
    tools:context=".login_form">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:paddingBottom="100dp"
        android:fontFamily="@font/ar"
        android:textSize="50sp"
        android:textColor="@color/light_sky"
        android:text="Login"
        >
    </com.google.android.material.textview.MaterialTextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/light_sky"
        android:fontFamily="@font/ar"
        android:paddingBottom="20dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:paddingLeft="20dp"
        android:drawablePadding="5dp"
        android:textColorHint="@color/light_sky"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:drawablePadding="5dp"
        android:fontFamily="@font/ar"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:inputType="textPassword"
        android:textColor="@color/light_sky"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:textColorHint="@color/light_sky"

        />



    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:layout_marginTop="10dp"
        android:paddingLeft="220dp"
        android:textAlignment="center"
        android:fontFamily="@font/ar"
        android:textColor="@color/light_blue"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/ar"
        android:textColor="@color/light_sky"
        android:shadowColor="@color/black"
        android:textSize="18sp"
        android:text="Login" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/signup_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need a New Account"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ar"
        android:paddingLeft="210dp"
        android:textAlignment="center"
        android:textColor="@color/light_blue"
        />
</LinearLayout>